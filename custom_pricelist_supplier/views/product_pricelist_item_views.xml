<?xml version="1.0" encoding="utf-8"?>
<odoo>    
    <record id="product_pricelist_item_form_view_inherit_pricelist_supplier" model="ir.ui.view">
        <field name="name">product.pricelist.item.form.inherit.pricelist.supplier</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="apply_to_supplier"/>
                <field name="supplier_id" 
                    options="{'no_create': 1}"
                    invisible="not apply_to_supplier"
                    required="apply_to_supplier"
                    placeholder="All Suppliers"/>
            </xpath>
        </field>
    </record>

</odoo>
