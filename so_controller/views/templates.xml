<odoo>
    <data>
      <template id="so_list_template">
          <h1>Sale Order List</h1>
          <div>
              <t t-esc="message"/>
          </div>
          <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Customer</th>
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="sale_orders" t-as="so" t-key="so.id">
                    <tr>
                        <td>
                            <a t-att-href="'/web#id=' + str(so.id) + '&amp;model=sale.order&amp;view_type=form'" target="_blank">
                              <t t-esc="so.name"/>
                            </a>
                        </td>
                        <td>
                            <t t-esc="so.partner_id.name"/>
                        </td>
                        <td>
                            <t t-esc="so.amount_total"/>
                        </td>
                        <td>
                            <!--Delete Button -->
                            <form t-att-action="'/so_controller/delete_so/' + str(so.id)" method="post" style="display:inline;">
                                <button type="submit"
                                        onclick="return confirm('Are you sure you want to delete this record?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
      </template>
    </data>
</odoo>
